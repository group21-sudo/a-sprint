<!--pages/historyreserve/historyreserve.wxml-->
<view class="table">
  <view class="tr bg-w">
    <view class="th">序号</view>
    <view class="th">学号</view>
    <view class="th ">时间</view>
    <view class="th ">状态</view>
  </view>
  <block wx:for="{{info}}" wx:key="info">
    <view class="tr bg-g" wx:if="{{item.flag==1}}">
      <view class="td">{{index+1}}</view>
      <view class="td">{{item.stu_id}}</view>
      <view class="td">{{item.reserve_time}}</view>
      <view class="td">已完成</view>
    </view>
    <view class="tr bg-g" wx:if="{{item.flag==-1}}">
      <view class="td">{{index+1}}</view>
      <view class="td">{{item.stu_id}}</view>
      <view class="td">{{item.reserve_time}}</view>
      <view class="td">已逾约</view>
    </view>
    <view class="tr bg-g" wx:if="{{item.flag==0}}">
      <view class="td">{{index+1}}</view>
      <view class="td">{{item.stu_id}}</view>
      <view class="td">{{item.reserve_time}}</view>
      <view class="td">进行中</view>
    </view>
  </block>
  <button disabled="{{isDisabled}}" bindtap="unreserveLatest">取消最近预约</button>
</view>